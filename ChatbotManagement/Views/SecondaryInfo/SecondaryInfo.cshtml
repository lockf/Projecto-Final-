@{
    ViewData["Title"] = "SecondaryInfo";
}
@model ChatbotManagement.Models.out_VM.SecondaryInfoVM

<head>
    <style>
        body,
        html {
            height: 100%;
            background-size: cover;
        }

        .table1 {
            width: 100% !important;
            text-align: center;
            background: #ffffff;
            border-color: #d6d6d6;
        }

        .th1 {
            width: 10%;
        }

        .custom1 {
            border-radius: 12px !important;
            width: 65% !important;
        }

        .custom2 {
            border-radius: 12px !important;
            width: 20% !important;
        }

        .scrollable {
            height: 325px;
            overflow-y: scroll;
        }

        .background-radial-gradient {
            background-image: radial-gradient(circle, #172236, #1c2a43, #223250, #273a5d, #2d436b, #2e446d, #2e456e, #2f4670, #2b4066, #26395c, #223352, #1e2d48);
        }
    </style>
</head>

<body class="background-radial-gradient">
    <div class="d-flex justify-content-center align-items-center h-50 my-3">
        <div class="border border-1 d-flex justify-content-center align-items-center row custom1">
            <h4 style="color: #d6d6d6;" class="mt-3">Messages</h4>
            <div class="scrollable my-3">
                <table class="table table-striped table1 my-2 rounded rounded-3">
                    <thead>
                        <tr>
                            <th scope="col" class="th1">Channel Id</th>
                            <th scope="col" class="th1">Conversation Id</th>
                            <th scope="col" class="th1">Date</th>
                            <th scope="col" class="th1">Link</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Message2VMs != null && Model.Message2VMs.Count != 0)
                        {
                            foreach (var item in Model.Message2VMs)
                            {
                                string link = "https://localhost:8081/SecondaryInfo/ShowMessage/" + item.Id.ToString() + "/";

                                <tr>
                                    <td>@item.ChannelId</td>
                                    <td>@item.ConversationId</td>
                                    <td>@item.Date</td>
                                    <td><a href=@link>Link</a></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>---</td>
                                <td>---</td>
                                <td>---</td>
                                <td>---</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center align-items-center h-50 mb-3">
        <div class="border border-1 d-flex justify-content-center align-items-center row custom2">
            <h4 style="color: #d6d6d6;" class="mt-3">Keywords</h4>
            <div class="scrollable my-3">
                <table class="table table-striped table-bordered table1">
                    <thead>
                        <tr>
                            <th scope="col">Keyword</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Keywords != null && Model.Keywords.Count != 0)
                        {
                            foreach (var kword in Model.Keywords)
                            {
                                <tr>
                                    <td>@kword</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>---</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center align-items-center mt-3">
        @if (ViewData["SolrConnected"] != null && ViewData["SolrConnected"]!.Equals(false))
        {
            <h1 style="color:red;">Error connecting to Solr</h1>
        }
    </div>
</body>