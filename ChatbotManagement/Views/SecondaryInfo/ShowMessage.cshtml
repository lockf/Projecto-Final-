@{
    ViewData["Title"] = "ShowMessage";
}
@model ChatbotManagement.Models.VM.MessageVM

<style>
    .bBoxit {
        width: 1186px;
        height: 400px;
        padding: 8px 8px 8px 8px;
        background: #ffffff;
        border-color: #d6d6d6;
        border-width: 1px;
        border-style: solid;
        border-radius: 16px 16px 16px 16px;
    }

    .sBoxit {
        width: 1102px;
        height: 228px;
        padding: 6px 8px 6px 8px;
        background: #ffffff;
        border-color: #d6d6d6;
        border-width: 2px;
        border-style: solid;
        border-radius: 3px 3px 3px 3px;
        font-family: "Source Sans Pro";
        font-weight: 400;
        font-size: 18px;
        text-align: left;
    }

    .background-radial-gradient {
        background-image: radial-gradient(circle, #172236, #1c2a43, #223250, #273a5d, #2d436b, #2e446d, #2e456e, #2f4670, #2b4066, #26395c, #223352, #1e2d48);
    }
</style>

<body class="background-radial-gradient">
    <div class="d-flex justify-content-center align-items-center mt-3">
        <div class="card bBoxit mx-3 mt-3">
            <div class="card-body">
                <div class="d-flex justify-content-evenly align-items-center">
                    <div class="d-flex justify-content-start">
                        <label class="card-title carTitle me-2"><b>Channel Id: </b></label>
                        <p>@Model.ChannelId</p>
                    </div>
                    <div class="d-flex justify-content-start">
                        <label class="card-title carTitle me-2"><b>Conversation Id: </b></label>
                        <p>@Model.ConversationId</p>
                    </div>
                    <div class="d-flex justify-content-start">
                        <label class="card-title carTitle me-2"><b>Date: </b></label>
                        <p>@Model.Date</p>
                    </div>
                </div>
                <div class="mt-3">
                    <label class="mb-3"><b>Message: </b></label>
                    <div class="sBoxit">
                        <p>@Model.Text</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center align-items-center mt-3">
        @if (ViewData["SolrConnected"] != null && ViewData["SolrConnected"]!.Equals(false))
        {
                <h1 style="color:red;">Error connecting to Solr</h1>
        }
    </div>
</body>