@{
    ViewData["Title"] = "Dashboard";
}
@model ChatbotManagement.Models.out_VM.DashboardVM

<style>
    body,
    html {
        height: 100%;
        background-size: cover;
    }
    .boxit {
        height: 124px;
        width: 16rem;
        background: #444444;
        border-color: #d6d6d6;
        border-width: 1px;
        border-style: solid;
        border-radius: 16px;
    }

    .boxit2 {
        height: 124px;
        width: 16rem;
        background: #ffffff;
        border-color: #d6d6d6;
        border-width: 1px;
        border-style: solid;
        border-radius: 16px;
    }

    .carTitle {
        width: 129px;
        height: 26px;
        color: #ffffff;
        font-family: "Source Sans Pro";
        font-weight: 600;
        font-size: 18px;
        text-align: left;
    }

    .carRest {
        color: #ffffff;
        font-family: "Source Sans Pro";
        font-weight: 500;
        font-size: 28px;
        line-height: 3;
        text-align: left;
    }

    .carTitle2 {
        width: 129px;
        height: 26px;
        color: #444444;
        font-family: "Source Sans Pro";
        font-weight: 600;
        font-size: 18px;
        text-align: left;
    }

    .carRest2 {
        color: #444444;
        font-family: "Source Sans Pro";
        font-weight: 500;
        font-size: 28px;
        line-height: 3;
        text-align: left;
    }

    .icoProp {
        width: 36px;
        height: 36px;
    }

    .icoProp2 {
        width: 24px;
        height: 24px;
    }

    .background-radial-gradient {
        background-image: radial-gradient(circle, #172236, #1c2a43, #223250, #273a5d, #2d436b, #2e446d, #2e456e, #2f4670, #2b4066, #26395c, #223352, #1e2d48);
    }
</style>

